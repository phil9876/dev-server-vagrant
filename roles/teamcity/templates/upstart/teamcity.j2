### BEGIN INIT INFO
# Provides:          teamcity
# Required-Start:    $network $remote_fs $syslog
# Required-Stop:     $network $remote_fs $syslog
# Should-Start:      network-manager
# Should-Stop:       network-manager
# X-Start-Before:    $x-display-manager gdm kdm xdm wdm ldm sdm nodm
# X-Interactive:     true
# Default-Start:     2 3 4 5
# Default-Stop:      0 1 6
# Short-Description: Teamcity
# Description: Teamcity
### END INIT INFO
#
# teamcity
#
# chkconfig: 234 20 80
# description:  Start up the Teamcity servlet engine.

# /etc/init.d/teamcity -  startup script for teamcity
export TEAMCITY_DATA_PATH="/{{teamcity_install_dir}}/.BuildServer"

case $1 in
  start)
    echo "Starting Team City"
    start-stop-daemon --start  -c teamcity --exec /{{teamcity_install_dir}}/TeamCity/bin/teamcity-server.sh start
    ;;
  stop)
    echo "Stopping Team City"
    start-stop-daemon --start -c teamcity  --exec  /{{teamcity_install_dir}}/TeamCity/bin/teamcity-server.sh stop
    ;;
  restart)
    echo "Restarting Team City"
    start-stop-daemon --start  -c teamcity --exec /{{teamcity_install_dir}}/TeamCity/bin/teamcity-server.sh stop
    start-stop-daemon --start  -c teamcity --exec /{{teamcity_install_dir}}/TeamCity/bin/teamcity-server.sh start
    ;;
  *)
    echo "Usage: /etc/init.d/teamcity {start|stop|restart}"
    exit 1
    ;;
esac

exit 0